<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

	<changeSet id="add-disablePullToRefresh-setting" author="athou">
		<addColumn tableName="USERSETTINGS">
			<column name="disablePullToRefresh" type="BOOLEAN" valueBoolean="false">
				<constraints nullable="false" />
			</column>
		</addColumn>
	</changeSet>

	<changeSet id="enable-disablePullToRefresh-setting" author="athou">
		<update tableName="USERSETTINGS">
			<column name="disablePullToRefresh" valueBoolean="true" />
		</update>
	</changeSet>

	<changeSet id="add-truncateArticlesToFirstParagraph-setting" author="athou">
		<addColumn tableName="USERSETTINGS">
			<column name="truncateArticlesToFirstParagraph" type="BOOLEAN" valueBoolean="false">
				<constraints nullable="false" />
			</column>
		</addColumn>
	</changeSet>

	<changeSet id="add-truncateArticlesLength-setting" author="athou">
		<addColumn tableName="USERSETTINGS">
			<column name="truncateArticlesLength" type="INT" valueNumeric="1000">
				<constraints nullable="false" />
			</column>
		</addColumn>
	</changeSet>

</databaseChangeLog>
